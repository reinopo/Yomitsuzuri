<div class="c-devise__container l-container--s">
  <h2 class="c-devise__title">ログイン</h2>

  <div class="c-devise__inner">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label(
              :email,
              class: "c-devise__input-title"
            ) %>
        <%= f.email_field(
              :email,
              autofocus: true,
              autocomplete: "email",
              class: "c-devise__input"
            ) %>
      </div>

      <div class="field">
        <%= f.label(
              :password,
              class: "c-devise__input-title"
            ) %>
        <%= f.password_field(
              :password,
              autocomplete: "current-password",
              class: "c-devise__input"
            ) %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field c-devise__remember-me">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit(
              "ログイン",
              class: "c-button c-button--medium c-button--white c-button--center"
            ) %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
