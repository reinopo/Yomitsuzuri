<% content_for :title, "パスワード再設定リクエスト - Yomitsuzuri" %>
<% content_for :og_title, "パスワード再設定リクエスト - Yomitsuzuri" %>

<div class="c-devise__container l-container--s">
  <h2 class="c-devise__title">パスワード再設定メールを送信</h2>

  <div class="c-devise__inner">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label(
              :email,
              class: "c-devise__input-title"
            ) %>
        <%= f.email_field(
              :email,
              autofocus: true,
              autocomplete: "email",
              class: "c-devise__input"
            ) %>
      </div>

      <div class="actions">
        <%= f.submit(
              "送信",
              class: "c-button c-button--medium c-button--white c-button--center"
            ) %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
