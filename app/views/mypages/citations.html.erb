<% content_for :title, "引用メモ / #{current_user.nickname} - Yomitsuzuri" %>
<% content_for :description, "心に残ったことばを記録した、引用メモの一覧ページ。いつでも見返すことができます。" %>
<% content_for :og_title, "引用メモ / #{current_user.nickname} - Yomitsuzuri" %>
<% content_for :og_description, "心に残ったことばを記録した、引用メモの一覧ページ。いつでも見返すことができます。" %>
<% content_for :og_type, "article" %>

<div class="mypage__contents mypage__citations">
  <% if @citations.any? %>
    <% @citations.each do |citation| %>
      <div class="c-citation mypage__citation">
        <blockquote class="c-citation__content mypage__citation__content">
          <p class="c-citation__text">"<%= citation.content %>"</p>
          <div class="c-citation__info">
            <% if citation.page_number.present? %>
              <span class="c-citation__page"><%= citation.page_number %></span>
            <% end %>
            <time class="c-citation__date"><%= citation.created_at.strftime("%Y/%m/%d") %></time>
          </div>
          <p class="c-citation__book-title">
            ー <%= link_to citation.reading_log.book.title, book_path(citation.reading_log.book), class: "c-citation__book-link c-works__title--link" %>
          </p>
        </blockquote>
      </div>
    <% end %>
  <% else %>
    <p>まだ引用メモが登録されていません。</p>
  <% end %>
</div>