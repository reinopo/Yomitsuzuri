<div class="mypage__contents mypage__home">
  <h2 class="c-title-level2 l-mb-16">読んだ本</h2>

  <% if @reading_logs.present? %>
      <ul class="c-works c-works--4columns">
        <% @reading_logs.each do |log| %>
          <% book = log.book %>
          <li class="c-works__item c-works__item--4columns">
            <% image_url = book.thumbnail_link %>
            <img class="c-works__image c-works__image--4columns" src="<%= image_url.present? && image_url.start_with?("http") ? image_url : asset_path("no-image.jpeg") %>" alt="<%= book.title %> の表紙画像">

            <div class="c-works__info c-works__info--4columns">
              <div class="c-works__text">
                <h3 class="c-works__title c-works__title--4columns c-works__title--link"><%= book.title %></h3>
                <p class="c-works__author c-works__author--4columns c-works__author--link">
                  <%= book.authors.map(&:name).join(", ") %>
                </p>
              </div>

              <%# <%= link_to "詳細を見る", book_path(book), class: "c-button c-button--small c-button--white c-button--center" %>
            </div>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p>まだ作品が登録されていません。</p>
    <% end %>
</div>

